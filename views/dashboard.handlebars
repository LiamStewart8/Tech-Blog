{{#each blogs as |blog|}}
<div class="panel panel-primary" style="width: 80rem;">
    <div class="panel-body">
        <h5><a href="/blog/{{blog.id}}" class="panel-title">{{blog.title}}</a></h5>
        <h6 class="panel-subtitle mb-2 text-muted">Written by: {{blog.User.name}}</h6>
        <p class="panel-text">{{blog.body}}</p>
    </div>
</div>
{{/each}}


{{#each comment}}
<div class="panel panel-primary" style="width: 36rem;">
    <div class="panel-body">
        <h5>{{User.username}} on {{time}}</h5>
        <p class="panel-text">{{body}}</p>
    </div>
</div>
{{/each}}

<div class="container">
    <form>
    <div class="form-group">
        <label for="exampleFormControlInput1">Blog Name</label>
        <input type="text" class="form-control" id="new-blog-name" placeholder="Blog Name">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Content</label>
        <textarea class="form-control" id="new-blog-content" rows="3"></textarea>
    </div>
    <button type="button" class="btn btn-dark" id="submit-blog">Submit Post</button>
    </form>
</div>

<script src="/newBlog.js"></script>